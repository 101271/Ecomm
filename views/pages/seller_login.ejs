<% layout('./layout/login_signup') -%>

<div class="login-box">
  <h2>Welcome To M.H Avenue</h2>
  <p>Please log in to Seller's Account</p>

  <form
    class="needs-validation"
    action="/login_seller"
    method="POST"
    novalidate
  >
    <input
      type="text"
      id="validationTooltip01"
      class="form-control"
      placeholder="Enter Your Username!"
      required
      minlength="6"
      maxlength="25"
      name="username"
    />
    <div class="valid-feedback">Looks good!</div>
    <div class="invalid-feedback">Please Enter Valid Username!</div>
    <div class="password-field">
      <input
        type="password"
        id="password"
        class="form-control"
        placeholder="Enter Your password!"
        required
        minlength="8"
        maxlength="25"
        name="password"
      />
      <span class="toggle-password" onclick="togglePassword()">ğŸ‘ï¸</span>
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Please Enter Valid password!</div>
    </div>
    <button type="submit">Login</button>
  </form>
  <div class="links">
    <a href="#">Forgot password?</a>
    <a href="/signup">Sign up</a>
    <a href="/login">Seller Login</a>
  </div>
</div>
