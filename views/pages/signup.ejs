<% layout('./layout/login_signup') -%>

<div class="login-box">
  <h2>Welcome To M.H Avenue</h2>
  <p>Please Sign up to continue</p>
  <form action="/signup" class="needs-validation" method="POST" novalidate>
    <div>
      <input
        type="text"
        name="username"
        class="form-control"
        placeholder="Please Enter Username!"
        minlength="6"
        maxlength="25"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Please Enter the Valid Username!</div>
    </div>
    <div>
      <input
        type="email"
        name="email"
        placeholder="Please Enter Your Email!"
        maxlength="100"
        minlength="10"
        required
        pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$"
        class="form-control"
      />
      <div class="invalid-feedback">Please Enter Valid Email!</div>
      <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="password-field">
      <input
        type="password"
        name="password"
        id="password"
        class="password_1 form-control"
        placeholder="Please Enter Your password!"
        required
        class="form-control"
        maxlength="35"
        minlength="8"
      />
      <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Please Enter Valid password!</div>
    </div>
    <div class="password-field">
      <input
        type="password"
        name="confirm_password"
        id="password"
        class="password_2"
        placeholder="Please Enter Your Password Again!"
        required
        class="form-control"
        maxlength="35"
        minlength="8"
      />
      <span class="toggle-password" onclick="togglePassword()"></span>
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Please Enter Valid Password!</div>
    </div>
    <button type="submit">Login</button>
  </form>
  <div class="links">
    <a href="/login">Login</a>
    <a href="#">Seller signup</a>
  </div>
</div>
